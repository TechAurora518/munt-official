<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:title="Preferences"
    tools:context=".main_activity_fragments.SettingsFragment">

    <Preference
        android:key="recovery_preference"
        android:iconSpaceReserved="false"
        android:persistent="false"
        android:summary=""
        android:title="Recovery phrase"
        tools:ignore="UnusedAttribute" />

    <Preference
        android:key="recovery_view_preference"
        android:iconSpaceReserved="false"
        android:persistent="false"
        android:summary=""
        android:title=""
        tools:ignore="UnusedAttribute" />

    <Preference
        android:key="preference_link_wallet"
        android:iconSpaceReserved="false"
        android:persistent="false"
        android:summary="Link your mobile wallet with your desktop wallet"
        android:title="Link wallet"
        tools:ignore="UnusedAttribute" />

    <Preference
        android:key="preference_change_passcode"
        android:iconSpaceReserved="false"
        android:persistent="false"
        android:summary=""
        android:title="Change passcode"
        tools:ignore="UnusedAttribute" />

    <Preference
        android:key="preference_rescan_wallet"
        android:iconSpaceReserved="false"
        android:persistent="false"
        android:summary=""
        android:title="Rescan wallet" />

    <Preference
        android:key="preference_remove_wallet"
        android:iconSpaceReserved="false"
        android:persistent="false"
        android:summary="Remove this wallet in order to start or recover another wallet"
        android:title="Remove wallet"
        tools:ignore="UnusedAttribute" />

    <ListPreference
        android:key="preference_local_currency"
        android:title="Local currency"
        android:summary="%s"
        android:iconSpaceReserved="false"
        android:entries="@array/currency_description_entries"
        android:entryValues="@array/currency_codes"
        android:defaultValue="@string/default_currency"
        tools:ignore="UnusedAttribute" />

    <SwitchPreference
        android:key="preference_notify_transaction_activity"
        android:iconSpaceReserved="false"
        android:persistent="true"
        android:defaultValue="true"
        android:summary=""
        android:title="Notifications"
        tools:ignore="UnusedAttribute" />

    <ListPreference
        android:key="preference_background_sync"
        android:title="Background synchronisation"
        android:summary="%s"
        android:entries="@array/background_sync_entries"
        android:entryValues="@array/background_sync_values"
        android:defaultValue="@string/background_sync_default" />

    <Preference
        android:key="preference_monitor"
        android:iconSpaceReserved="false"
        android:persistent="false"
        android:summary=""
        android:title="Network monitor"
        tools:ignore="UnusedAttribute" />

</PreferenceScreen>