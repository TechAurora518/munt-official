<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/numeric_keypad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:orientation="horizontal"
    android:stretchColumns="0, 4">

    <TableRow>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_rounded_button"
            android:onClick="handleKeypadButtonClick"
            android:text="@string/send_keypad_digit_1"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_digit_2"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_digit_3"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </TableRow>

    <TableRow>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_digit_4"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_digit_5"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_digit_6"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </TableRow>

    <TableRow>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_digit_7"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_digit_8"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_digit_9"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </TableRow>

    <TableRow>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_decimal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_decimal_separator"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_digit_0"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_backspace"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="handleKeypadButtonClick"
            android:background="@drawable/shape_rounded_button"
            android:text="@string/send_keypad_button_delete"
            android:textColor="@android:color/white"
            app:srcCompat="@android:drawable/ic_notification_clear_all" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </TableRow>

</TableLayout>