{
  "name": "novo",
  "version": "1.0.0",
  "description": "Novo currency",
  "author": "Malcolm MacLeod",
  "license": "Gulden",
  "main": "main.js",
  "homepage": "https://www.novocurrency.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/novocurrency/novocurrency-core/"
  },
  "scripts": {
    "start": "electron .",
    "publish": "build -p always"
  },
  "devDependencies": {
    "electron": "8.2.3",
    "electron-builder": "^20.28.4"
  },
  "dependencies": {
    "electron-updater": "^4.0.6",
    "electron-context-menu": ""
  },
  "build": {
    "files": [
      "html/*",
      "img/*",
      "css/*",
      "fonts/*",
      "main.js",
      "libnovo_unity_node_js.node"
    ],
    "appId": "com.novocurrency.novo",
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "tar.xz",
        "AppImage"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
